---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProgrammingFundamentalsNav from '../../components/ProgrammingFundamentalsNav';
import CollapsibleSection from '../../components/CollapsibleSection';
import VerticalTimeline from '../../components/VerticalTimeline';
import Tooltip from '../../components/Tooltip';
import SearchComponent from '../../components/SearchComponent';
import DevelopmentStepsStory from '../../components/DevelopmentStepsStory';
import '../../styles/global.css';

// Use Astro's base URL for proper GitHub Pages routing
const base = import.meta.env.BASE_URL;

const developmentSteps = [
  {
    step: "Requirements Definition",
    description: "The process of gathering, analyzing, and documenting what the software system must do and the constraints it must operate within.",
    details: [
      "Stakeholder interviews and workshops to understand business needs",
      "Functional requirements that define what the system should do",
      "Non-functional requirements covering performance, security, and usability",
      "Acceptance criteria that define when requirements are met"
    ]
  },
  {
    step: "Determining Specifications",
    description: "Converting requirements into detailed technical specifications that guide the development process.",
    details: [
      "Technical architecture decisions and system constraints",
      "Interface specifications for system interactions", 
      "Data specifications including formats and validation rules",
      "Performance specifications and quality metrics"
    ]
  },
  {
    step: "Design",
    description: "Creating the blueprint for how the software will be structured and how components will interact.",
    details: [
      "System architecture design showing major components and their relationships",
      "User interface design including layouts, navigation, and user experience",
      "Database design with entity relationships and data models",
      "Algorithm design for core functionality and business logic"
    ]
  },
  {
    step: "Development",
    description: "The actual coding phase where the design is implemented into working software using programming languages and development tools.",
    details: [
      "Writing source code following coding standards and best practices",
      "Implementing algorithms and data structures as designed",
      "Creating user interfaces and system integrations",
      "Version control and code documentation throughout development"
    ]
  },
  {
    step: "Integration",
    description: "Combining individual software components and modules into a complete system and ensuring they work together correctly.",
    details: [
      "Unit integration where individual modules are combined and tested together",
      "System integration connecting all subsystems and external interfaces",
      "API integration for connecting with third-party services and databases",
      "Integration testing to verify that combined components function as expected"
    ]
  },
  {
    step: "Testing and Debugging",
    description: "Systematically checking the software for defects and ensuring it meets all requirements and quality standards.",
    details: [
      "Unit testing to verify individual components work correctly",
      "Integration testing to ensure components work together properly",
      "System testing to validate the complete system against requirements",
      "User acceptance testing to confirm the system meets user needs and expectations"
    ]
  },
  {
    step: "Installation",
    description: "Deploying the completed software to the production environment and making it available to end users.",
    details: [
      "Production environment setup with appropriate hardware and software configurations",
      "Data migration from existing systems if required",
      "User training and documentation to support system adoption",
      "Go-live activities including monitoring and immediate support"
    ]
  },
  {
    step: "Maintenance",
    description: "Ongoing support and evolution of the software after deployment to fix issues, improve performance, and add new features.",
    details: [
      "Corrective maintenance to fix bugs and defects discovered after deployment",
      "Adaptive maintenance to modify software for changing environments or requirements",
      "Perfective maintenance to improve performance, usability, or add new features",
      "Preventive maintenance to prevent future problems and improve system reliability"
    ]
  }
];
---

<BaseLayout title="Programming Fundamentals" description="Software development processes, methodologies, and fundamental concepts for NSW Year 11 Software Engineering">
  <!-- Breadcrumb Bar -->
  <div class="bg-gray-50 border-b border-gray-200 py-3">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between">
        <nav>
          <a href={`${base}/`} class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Home</a>
          <span class="text-sm text-gray-400 mx-2">></span>
