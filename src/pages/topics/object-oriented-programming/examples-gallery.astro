dvd1 = DVD("Inception", "D001", "Christopher Nolan", 148)
magazine1 = Magazine("Tech Today", "M001", 42, "March 2024")

library.add_item(book1)
library.add_item(dvd1)
library.add_item(magazine1)

# Borrow items
