---
import BaseLayout from '../layouts/BaseLayout.astro';
import TopicTiles from '../components/TopicTiles.tsx';
import StudyGuideTile from '../components/StudyGuideTile.tsx';
import StudyRoadmap from '../components/StudyRoadmap.tsx';
import '../styles/global.css';

// Use Astro's base URL for proper GitHub Pages routing
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Home" description="Year 11 Software Engineering Revision Wiki - Master programming fundamentals, OOP, algorithms, and more">
  <!-- Breadcrumb Bar -->
  <div class="bg-gray-50 border-b border-gray-200 py-3">
    <div class="container mx-auto px-6">
      <nav>
        <a href={`${base}/`} class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Home</a>
      </nav>
    </div>
  </div>

  <div class="min-h-screen bg-white py-8">
    <div class="container mx-auto px-6 space-y-12">
      <!-- Three main topic tiles -->
      <TopicTiles client:load />
      
      
      <!-- Study Roadmap -->
      <div class="max-w-7xl mx-auto">
        <StudyRoadmap client:load />
      </div>
    </div>
  </div>
</BaseLayout>
