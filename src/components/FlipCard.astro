---
export interface Props {
  frontTitle: string;
  backTitle?: string;
  id?: string;
}

const { frontTitle, backTitle, id } = Astro.props;
const uniqueId = id || `flipcard-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="flip-card" id=&#123;uniqueId&#125;>
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <div class="card-header">
        <h3>&#123;frontTitle&#125;</h3>
        <span class="flip-indicator">ðŸ”„</span>
      </div>
      <div class="card-content">
        <slot name="front" />
      </div>
    </div>
    <div class="flip-card-back">
      <div class="card-header">
        <h3>&#123;backTitle || 'Answer'&#125;</h3>
        <span class="flip-indicator">ðŸ”„</span>
      </div>
      <div class="card-content">
        <slot name="back" />
      </div>
    </div>
  </div>
</div>

<style>
  .flip-card {
    background-color: transparent;
    width: 100%;
    height: 300px;
    perspective: 1000px;
    margin: 1rem 0;
  }

  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 1.2s ease-in-out;
    transform-style: preserve-3d;
    cursor: pointer;
  }

  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-front, .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    border: 1px solid #e1e1e1;
    border-radius: 12px;
    background: white;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
  }

  .flip-card-back {
    transform: rotateY(180deg);
    background: #f8fafc;
    border: 2px solid #3b82f6;
    color: #1f2937;
  }

  .card-header {
    padding: 1rem;
    border-bottom: 1px solid #e1e1e1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f8f9fa;
    border-radius: 12px 12px 0 0;
  }

  .flip-card-back .card-header {
    background: #dbeafe;
    border-bottom: 1px solid #93c5fd;
    color: #1e40af;
  }

  .card-header h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .flip-indicator {
    font-size: 1.2rem;
    opacity: 0.6;
  }

  .card-content {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: left;
    overflow-y: auto;
  }

  .flip-card-back .card-content {
    color: #374151;
  }

  @media (max-width: 768px) {
    .flip-card {
      height: 250px;
    }
    
    .card-content {
      padding: 1rem;
    }
  }
</style>